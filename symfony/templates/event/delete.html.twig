{% extends 'base.html.twig' %}

{% block title %}Supprimer un évènement{% endblock %}

{% block container %}
<main role="main" class="flex-shrink-0">
    <div class="container">
        <h2 class="my-2 text-light">Supprimer un évènement</h2>
        <div class="card">
            <div class="card-body">
                <p>L'évènement <strong>{{ name }}</strong> a bien été supprimé</p>
                <a href="{{ path('event_read_all') }}" class="btn btn-success">Retour à la liste</a>
            </div>
        </div>
    </div>
</main>
{% endblock %}
